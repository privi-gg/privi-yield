{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "protocol#build": {
      "env": [
        "RPC_POLYGON_MUMBAI",
        "RPC_POLYGON_MAINNET",
        "RPC_GOERLI",
        "PRIVATE_KEYS_TEST",
        "HARDHAT_FORK"
      ]
    },
    "web#build": {
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_RPC_GOERLI",
        "NEXT_PUBLIC_RPC_POLYGON_MUMBAI",
        "NEXT_PUBLIC_TEST_PRIVATE_KEY"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
